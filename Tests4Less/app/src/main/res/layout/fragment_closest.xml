<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id = "@+id/container"
    android:background="@color/lightGrey"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_margin"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_height="fill_parent"
            android:layout_weight="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/with_pathalogy"
                android:textStyle="bold"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/shoe_labs"
                android:id="@+id/textView2" />
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:id="@+id/checkBox"
            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="fill_parent"

            android:id="@+id/listViewResult_closest"
            android:background="@color/lightGrey"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/Button_height"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/activity_horizontal_margin"
            android:layout_weight="8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView android:id="@+id/proceedBottom"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/Button_height"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#FFFFFF"

            android:text="@string/proceed"
            android:background="#336699"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>